<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTareas.MainPage"
             BackgroundColor="Black"
             >

    <StackLayout>
        <Label Text="Conversor de Unidades" TextColor="White" FontSize="20" HorizontalOptions="Center" Margin="0,30,0,0"/>
        <Image Source="perfil.png" HeightRequest="350"/>
        <Entry WidthRequest="200" HeightRequest="40" BackgroundColor="Azure" Margin="10,0,10,0" x:Name="entrada" TextColor="Black"/>
        <Label Text="Selecciona una opción:" Margin="10,0,10,0"/>
        <Picker x:Name="opciones" BackgroundColor="Gray" Margin="10,0,10,0">
            <Picker.Items>
                <x:String>Peso</x:String>
                <x:String>Volumen</x:String>
                <x:String>Temperatura</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Convertir" HorizontalOptions="Center" Margin="0,10,0,0" WidthRequest="300" Clicked="Convertir"/>
    </StackLayout>

</ContentPage>
